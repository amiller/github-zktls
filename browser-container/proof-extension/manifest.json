{
  "manifest_version": 3,
  "name": "Proof Generator",
  "version": "0.2.0",
  "description": "Injects cookies and captures proof via API interception",
  "permissions": [
    "tabs",
    "cookies",
    "scripting",
    "storage",
    "alarms",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
